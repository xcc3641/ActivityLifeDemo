<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hugo.demo.activitydemo">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".aActivityChapter.MainActivity"/>
        <activity android:name=".aActivityChapter.OtherActivity"/>
        <activity
            android:name=".aActivityChapter.DialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity android:name=".bFragmentChapter.FragmentHostActivity"/>
        <activity android:name=".cViewPagerChapter.ViewPagerHostActivity"/>

        <activity
            android:name=".dLaunchChapter.OneActivity"
            android:launchMode="singleTop"
            android:taskAffinity="com.hugo.demo.singleTask"/>

        <activity android:name=".dLaunchChapter.TwoActivity"
            />


    </application>

</manifest>